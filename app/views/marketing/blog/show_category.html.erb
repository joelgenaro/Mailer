<div class="blog-posts">
  <div class="blog-posts__category-title">
    <h1>Category: <%= @category.title %></h1>
  </div>
  <div class="blog-posts__posts">
    <% @posts.each do |post| %>
      <%= render 'post', post: post %>
    <% end %>
    <% if contentful_needs_pagination?(@posts) %>
      <%= render 'pagination', posts: @posts %>
    <% end %>
  </div>
</div>