<% content_for(:meta_title) { 'Sign Up - MailMate' } %>
<div class="container p-3 p-md-5" id="signin">

  <!-- Card -->
  <div class="card p-0 col-lg-6 offset-lg-3">
      <div class="row no-gutters">
        <div class="col-md-12" id="content-body">
          <div class="p-4">

            <!-- Form -->
            <img src="<%= image_url('logo.png') %>" class="signup-modal__logo" />
    <%= form_with(model: @user, url: register_url) do |form|%>
        <% if @user.errors.present? %>
            <div class="alert alert-danger"><%= @user.errors.full_messages.to_sentence %></div>
        <% end %>
        <div class="form-group">
            <label htmlFor="email" class="form-label"><%=t('marketing.sign_up.email_address')%></label>
            <%= form.text_field :email, class: "form-control", placeholder: t('marketing.sign_up.enter_your_email_address'), required: true%>
        </div>

        <div class="form-group">
        <label htmlFor="password" class="form-label"><%=t('marketing.sign_up.password')%></label>
        <%= form.password_field :password, placeholder: t('marketing.sign_up.enter_your_password'), class: "form-control" %>
        </div>

        <div class="form-group">
        <label htmlFor="terms" class="form-label">
            <input type="checkbox" id="terms" required="true" />
            <% if I18n.locale == :ja %>
                MailMateにサインアップすることで、MailMateの<a target="_blank" href="<%= marketing_terms_of_service_url %>" >利用規約</a>に同意したことになります。</>
            <% else %>
                By signing up to MailMate.jp, you're agreeing to the MailMate <a target="_blank" href="<%= marketing_terms_of_service_url %>" >Terms and Conditions</a>.</>
            <% end %>
        </label>
        </div>
        <%= hidden_field_tag :subscription_type, @subscriptionType %>
        <%= hidden_field_tag :subscription_name, @subscriptionName %>
        <%= hidden_field_tag :locale, I18n.locale.to_s %>

        <div class="form-group">
        <button type="submit" class="btn btn-teal btn-block signup-modal__submit", data-turbo="false">
            <span class="signup-modal__submit__text"><%= t('marketing.sign_up.create_an_account')%></span>
            <span class="signup-modal__submit__spinner spinner-grow spinner-grow-sm"></span>
        </button>
        <p class="signup-modal__info"><%= t('marketing.sign_up.money_back_guarantee')%></p>
        </div>
        <%= link_to "", marketing_pricing_path,  class: "signup-modal__close", data: {turbo: "false"} %>
    <% end %>

          </div>
        </div>
      </div>
  </div><!-- /.card -->
</div>